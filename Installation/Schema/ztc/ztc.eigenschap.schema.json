{
    "$id": "https://vng.opencatalogi.nl/schemas/ztc.eigenschap.schema.json",
    "$schema": "https://docs.commongateway.nl/schemas/Entity.schema.json",
    "version": "0.1.3",
    "type": "object",
    "title": "Eigenschap",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "nullable": true
      },
      "url": {
        "type": "string",
        "title": "Url",
        "description": "URL-referentie naar dit object. Dit is de unieke identificatie en locatie van dit object.",
        "format": "uri",
        "maxLength": 1000,
        "minLength": 1,
        "defaultValue": "{{ selfUrl(object) }}"
      },
      "naam": {
        "description": "De naam van de EIGENSCHAP",
        "type": "string",
        "maxLength": 20,
        "minLength": 1,
        "required": true
      },
      "definitie": {
        "description": "De beschrijving van de betekenis van deze EIGENSCHAP",
        "type": "string",
        "maxLength": 255,
        "minLength": 1,
        "required": true
      },
      "specificatie": {
        "format": "url",
        "$ref": "https://vng.opencatalogi.nl/schemas/ztc.eigenschapSpecificatie.schema.json"
      },
      "toelichting": {
        "title": "Toelichting",
        "description": "Een toelichting op deze EIGENSCHAP en het belang hiervan voor zaken van dit ZAAKTYPE.",
        "type": "string",
        "maxLength": 1000
      },
      "zaaktype": {
        "type": "string",
        "format": "uri"
      }
    },
    "required": [
      "naam",
      "definitie"
    ]
  }